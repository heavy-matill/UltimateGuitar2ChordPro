{
    "manifest_version": 3,
    "name": "UltimateGuitar2ChordPro",
    "version": "1.0",
    "description": "UltimateGuitar2ChordPro Converter",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "<all_urls>"
    ],
    "web_accessible_resources": [{
        "resources": ["content.js"],
        "matches": ["<all_urls>"]
    }],
    "action": {},
    "background": {
        "service_worker": "service_worker.js"
    },
    "content_scripts": [{
        "matches": ["*://*.ultimate-guitar.com/tab/*"],
        "js": ["ChordSheetJS.bundle.js", "ultimate-guitar_content.js"],
        "run_at": "document_end"
    }]
}